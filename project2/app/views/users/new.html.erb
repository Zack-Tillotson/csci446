<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :password, 'Password' %><br />
    <%= f.text_field :password, :size => 40 %>
  </p>
  <p>
    <%= f.label :password_confirmation, 'Password Confirmation' %><br />
    <%= f.text_field :password_confirmation, :size => 40 %>
  </p>
  <p>
    <%= f.submit "Add User", :class => "submit" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
