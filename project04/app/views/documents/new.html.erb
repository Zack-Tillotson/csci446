<div id="menu-section">
  <%= link_to image_tag("/images/famfamfam_silk_icons_v013/arrow_left.png", :alt => 'List All Documents')+"List All Documents", documents_path %>
</div>

<h1>Creating a New Article</h1>

<% form_for(@document) do |f| %>
  <%= f.error_messages %>

  <p class="doc_item">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p class="doc_item">
    <%= f.label "Author Name" %><br />
    <%= f.text_field :author %>
  </p>
  <p class="doc_item">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Create!" %>
  </p>
<% end %>

<%= link_to 'Back', documents_path %>
