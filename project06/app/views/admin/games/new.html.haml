%h1 New Game
- form_for([:admin, @game]) do |f|
  = f.error_messages
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.label :rating
    %br/
  %p
    = f.radio_button :rating, "Excellent"
    = f.label "Excellent"
    %br/
    = f.radio_button :rating, "Good"
    = f.label "Good"
    %br/
    = f.radio_button :rating, "Neutral", :checked => true
    = f.label "Neutral"
    %br/
    = f.radio_button :rating, "Bad"
    = f.label "Bad"
    %br/
    = f.radio_button :rating, "Terrible"
    = f.label "Terrible"
  %p
    = f.label :user_id
    %br/
    = collection_select(:game, :user_id, User.all, :id, :name_first, options = {:prompt => "Select user"}, :class=>"game")
  %p
    = f.submit 'Create'
= link_to 'Back', admin_games_path
