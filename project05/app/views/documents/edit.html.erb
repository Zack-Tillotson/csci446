<div id="menu-section">
  <%= link_to image_tag("/images/famfamfam_silk_icons_v013/arrow_left.png", :alt => 'List All Documents')+"Back", documents_path %>
</div>

<% form_for(@document) do |f| %>

  <h1>Editing "<%=h @document.title%>"</h1>

  <%= f.error_messages %>

  <p class="doc-item">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p class="doc-item">
    <%= f.label :author %>
    <%= collection_select(:document, :author, @authorList, :name, :name, options ={:prompt => 'Select An Author'}) %>
    <%= link_to "Enter New Author", new_author_path %>
  </p>
  <p class="doc-item">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit "Save!" %>
  </p>

<% end %>
